# =======================================
# Atlas Ecosystem Configuration (.env)
# =======================================

# ---------------------------------------
# Network Configs
# ---------------------------------------
# Sepolia RPC (testnet)
SEPOLIA_RPC_URL=https://sepolia.infura.io/v3/YOUR_INFURA_PROJECT_ID

# Base Mainnet RPC
BASE_MAINNET_RPC=https://base-mainnet.infura.io/v3/YOUR_INFURA_PROJECT_ID

# ---------------------------------------
# Deployment & Admin
# ---------------------------------------
PRIVATE_KEY=your_wallet_private_key_here
VAULT_ADMIN_ADDRESS=0xYourVaultAdminAddressHere  # Treasury/admin wallet

# ---------------------------------------
# Core Token / Contract Addresses
# ---------------------------------------
WETH_ADDRESS=0xYourWETHAddress
USDC_ADDRESS=0xYourUSDCAddress

# Optional: Etherscan / BaseScan API (for verification)
ETHERSCAN_API_KEY=YourEtherscanApiKeyHere
BASESCAN_API_KEY=YourBaseScanApiKeyHere

# ---------------------------------------
# Vault / Presale / Liquidity allocations (in token units)
# ---------------------------------------
PRESALE_ALLOCATION=300000000          # 300M for presale
LP_REWARD_ALLOCATION=200000000        # 200M for LP/staking rewards
DEX_LIQUIDITY_ALLOCATION=200000000    # Internal liquidity for DEX pools
CEX_LISTINGS_ALLOCATION=100000000     # Tokens reserved for CEX listings
TREASURY_ALLOCATION=400000000         # Treasury / operations / dev
MARKETING_ALLOCATION=250000000        # Marketing campaigns
TEAM_ALLOCATION=200000000             # Team / partnerships

# ---------------------------------------
# Fees / Reward allocations (percentages)
# ---------------------------------------
SWAP_FEE_REWARD_PERCENT=30            # % of swap fees to LP/stakers
SWAP_FEE_TREASURY_PERCENT=70          # % of swap fees to treasury
BRIDGE_FEE_TREASURY_PERCENT=100       # 100% of bridge fees go to treasury
LAUNCHPAD_FEE=0.2                      # ETH equivalent for launchpad listing fee (converted to Atlas)

# ---------------------------------------
# Presale / Vesting / LP parameters
# ---------------------------------------
PRESALE_PRICE=50000000                # Price in USDC (6 decimals)
PRESALE_VESTING_MONTHS=2
PRESALE_TGE_PERCENT=15
LP_DURATION=6                          # LP reward/staking duration in months
LP_REWARD_RATE_PER_SECOND=1000000000000000  # scaled by 1e18
MIN_LOCK_DURATION=2592000             # Minimum LP lock duration in seconds (e.g., 30 days)

# ---------------------------------------
# Optional / Experimental Modules
# ---------------------------------------
# NFT Modules
NFT_LAUNCHPAD_ENABLED=true
NFT_STAKING_ENABLED=true

# Multi-token support
MULTITOKEN_LP_ENABLED=true
MULTITOKEN_REWARD_IN_ATLAS=true

# No-code launchpad
NO_CODE_LAUNCHPAD_ENABLED=true
